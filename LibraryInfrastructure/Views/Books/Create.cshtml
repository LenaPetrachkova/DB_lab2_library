@model LibraryDomain.Model.Book

@{
    ViewData["Title"] = "Create";
}

<h1>Створення</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Annotation" class="control-label"></label>
                <input asp-for="Annotation" class="form-control" />
                <span asp-validation-for="Annotation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfPublish" class="control-label"></label>
                <input asp-for="YearOfPublish" class="form-control" />
                <span asp-validation-for="YearOfPublish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="selectedTopics" class="control-label">Жанри</label>
                <select asp-items="ViewBag.Topics" class="form-control" multiple="multiple" name="selectedTopics"></select>
            </div>
            <div class="form-group">
                <label for="selectedAuthors" class="control-label">Автори</label>
                <select asp-items="ViewBag.Authors" class="form-control" multiple="multiple" name="selectedAuthors"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
