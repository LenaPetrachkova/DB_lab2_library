@model IEnumerable<LibraryDomain.Model.Book>

@{
    ViewData["Title"] = "Запити до бази даних";
}

<h2>Запити до бази даних</h2>

<div class="container">
    <form method="get" asp-action="BooksByAuthor">
        <h4>Книги за автором</h4>
        <div class="form-group">
            <label for="authorId">Автор:</label>
            <select id="authorId" name="authorId" class="form-control">
                @foreach (var author in ViewBag.Authors)
                {
                    <option value="@author.Value">@author.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="BooksByTopic">
        <h4>Книги за темою</h4>
        <div class="form-group">
            <label for="topicId">Тема:</label>
            <select id="topicId" name="topicId" class="form-control">
                @foreach (var topic in ViewBag.Topics)
                {
                    <option value="@topic.Value">@topic.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="BooksByReader">
        <h4>Книги взяті читачем</h4>
        <div class="form-group">
            <label for="readerId">Читач:</label>
            <select id="readerId" name="readerId" class="form-control">
                @foreach (var reader in ViewBag.Readers)
                {
                    <option value="@reader.Value">@reader.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="BooksByYear">
        <h4>Книги за роком видання</h4>
        <div class="form-group">
            <label for="year">Рік видання:</label>
            <input type="number" id="year" name="year" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="BooksByAmount">
        <h4>Книги за кількістю</h4>
        <div class="form-group">
            <label for="amount">Кількість:</label>
            <input type="number" id="amount" name="amount" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="BooksByAuthorAndTopic">
        <h4>Книги за автором та темою</h4>
        <div class="form-group">
            <label for="authorId">Автор:</label>
            <select id="authorId" name="authorId" class="form-control">
                @foreach (var author in ViewBag.Authors)
                {
                    <option value="@author.Value">@author.Text</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="topicId">Тема:</label>
            <select id="topicId" name="topicId" class="form-control">
                @foreach (var topic in ViewBag.Topics)
                {
                    <option value="@topic.Value">@topic.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="BooksByYearAndAmount">
        <h4>Книги, видані після певного року і доступні у більшій кількості ніж задана</h4>
        <div class="form-group">
            <label for="year">Рік видання:</label>
            <input type="number" id="year" name="year" class="form-control" />
        </div>
        <div class="form-group">
            <label for="amount">Кількість:</label>
            <input type="number" id="amount" name="amount" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="BooksPublishedInLastYears">
        <h4>Книги, видані за останні N років</h4>
        <div class="form-group">
            <label for="years">N років:</label>
            <input type="number" id="years" name="years" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="UsersWhoRentedAnyBook">
        <h4>Знайти читачів, які орендували книги, що і читач N (хоча б одну)</h4>
        <div class="form-group">
            <label for="readerId">Читач:</label>
            <select id="readerId" name="readerId" class="form-control">
                @foreach (var reader in ViewBag.Readers)
                {
                    <option value="@reader.Value">@reader.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="UsersWhoRentedAllBooks">
        <h4>Знайти читачів, які орендували всі книги, що і читач N</h4>
        <div class="form-group">
            <label for="readerId">Читач:</label>
            <select id="readerId" name="readerId" class="form-control">
                @foreach (var reader in ViewBag.Readers)
                {
                    <option value="@reader.Value">@reader.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>

    <form method="get" asp-action="UsersWhoRentedOnlySameBooks">
        <h4>Знайти читачів, які орендували всі ті і тільки ті книги, що і читач N</h4>
        <div class="form-group">
            <label for="readerId">Читач:</label>
            <select id="readerId" name="readerId" class="form-control">
                @foreach (var reader in ViewBag.Readers)
                {
                    <option value="@reader.Value">@reader.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top:20px; margin-bottom:30px;">Виконати</button>
    </form>
</div>
