@model LibraryDomain.Model.ReaderCard

@{
    ViewData["Title"] = "Details";
}

<h1>Детальна інформація</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class = "col-sm-2">
            Книга
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class = "col-sm-2">
            Бібліотекар
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Librarian.LastName) @Html.DisplayFor(model => model.Librarian.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Читач
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reader.LastName) @Html.DisplayFor(model => model.Reader.FirstName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Назад</a>
</div>
