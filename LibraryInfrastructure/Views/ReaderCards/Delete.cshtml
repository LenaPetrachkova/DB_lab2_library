@model LibraryDomain.Model.ReaderCard

@{
    ViewData["Title"] = "Delete";
}

<h1>Ви впевнені, що хочете видалити цю оренду?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class = "col-sm-2">
            Книга
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class = "col-sm-2">
            Бібліотекар
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Librarian.LastName) @Html.DisplayFor(model => model.Librarian.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Читач
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reader.LastName) @Html.DisplayFor(model => model.Reader.FirstName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
